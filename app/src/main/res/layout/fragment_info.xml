<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="magisk"
            type="de.dertyp7214.rboardthememanager.data.MagiskInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/magiskVersionCode(magisk.versionNumber)}"
            android:textColor="@color/primaryText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/magiskVersionString(magisk.versionCode)}"
            android:textColor="@color/primaryText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/magiskFullString(magisk.fullString)}"
            android:textColor="@color/primaryText" />
    </LinearLayout>
</layout>