<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="magisk"
            type="de.dertyp7214.rboardthememanager.data.MagiskInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/primaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/magiskVersionCode(magisk.versionCode)}" />

        <TextView
            android:textColor="@color/primaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/magiskVersionNumber(magisk.versionNumber)}" />

        <TextView
            android:textColor="@color/primaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/magiskFullString(magisk.fullString)}" />
    </LinearLayout>
</layout>